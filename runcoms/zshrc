alias t="tmux"
alias ta="tmux a"
alias gs="git status"
alias nv="gpustat -FP -i 0.5"
alias fire="python -m fire"
alias f="fire"
alias gla="glances"
alias start_gdm="sudo systemctl start gdm3"
